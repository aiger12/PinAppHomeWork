<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PinAppHomeWork" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="PINButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OKButton" parent="PINButton">
        <item name="android:background">@drawable/button_background_gradient</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="Pintext" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="ProfileText" parent="Widget.AppCompat.TextView">
        <item name="fontWeight">500</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ProfileButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="TextBill" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="ChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/design_default_color_on_primary</item>
        <item name="chipStrokeColor">#333FA6</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">#0E1023</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
    </style>

    <style name="PinDigitStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">4dp</item>
    </style>
</resources>